<h1> Новая петиция </h1>

    <% flash.each do |name, msg| %>
        <div class="alert alert-success"><%= msg %></div>
    <% end %>

<!-- BEGIN new petition form -->
  <%= form_for :petition, url: petitions_path  do |f| %>

    <% if @petition.errors.any? %>
        <% @petition.errors.full_messages.each do |message| %>
            <div class="alert alert-danger">
              <%=  message %>
            </div>
        <% end %>
    <% end %>

      <div class="form-group">
        <%= f.label :title, 'Название' %><br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :text, 'Описание' %><br>
        <%= f.text_area :text, rows: 10 %>
      </div>
      <%= f.submit 'Создать', :name => 'submit', class: "btn btn-lg btn-success" %>

  <% end %>
<!-- END new petition form -->
