<h1> Редактировать петицию: </h1>
<!-- BEGIN edit petition form -->
    <%= form_for :petition,  url: petition_path(@petition), method: :patch do |f| %>
    <p>
      <%= f.label :Название %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :Описание %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit 'Сохранить', :name => 'update' %>
    </p>
<% end %>
<!-- END edit petition form -->
